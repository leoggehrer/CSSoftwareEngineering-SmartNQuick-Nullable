@*@BaseCode*@
@{
    @model SmartNQuick.AspMvc.Models.Modules.View.SubmitApplyBackCmd

    <div class="row justify-content-between">
        @if (Model.RightAlign)
        {
            <div class="mr-auto"></div>
        }
        @if (Model.FromSubmitToBack)
        {
            <div class="p-sm-2" style="margin: 0.2em">
                <input type="submit" value="@Model.SubmitText" class="@Model.SubmitCss" style="@Model.SubmitStyle" formaction="@Model.SubmitAction" />
                @Html.ActionLink(Model.BackText, Model.BackAction, Model.BackController, null, new { @class = Model.BackCss, style = Model.BackStyle })
            </div>
            <div class="p-sm-2" style="margin: 0.2em">
                <input type="submit" value="@Model.ApplyText" class="@Model.ApplyCss" style="@Model.ApplyStyle" formaction="@Model.ApplyAction" />
            </div>
        }
        else
        {
            <div class="p-sm-2" style="margin: 0.2em;">
                @Html.ActionLink(Model.BackText, Model.BackAction, Model.BackController, Model.BackRouteValues, new { @class = Model.BackCss, style = Model.BackStyle })
                <input type="submit" value="@Model.SubmitText" class="@Model.SubmitCss" style="@Model.SubmitStyle" formaction="@Model.SubmitAction" />
            </div>
            <div class="p-sm-2" style="margin: 0.2em">
                <input type="submit" value="@Model.ApplyText" class="@Model.ApplyCss" style="@Model.ApplyStyle" formaction="@Model.ApplyAction" />
            </div>
        }
    </div>
}
